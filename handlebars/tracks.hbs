<div class="col1">
  <h1>{{title}}</h1>
  <h2>by <a href="" class="back_to_home"><strong>{{artist}}</strong></a></h2>

  <div class="download">
    <h3><a href="{{downloadURL}}" target="_blank">Digital Album</a></h3>
    <h2><a href="{{downloadURL}}" target="_blank">Free Download</a></h2>
    {{#if videoLink}}<h2><a href="{{videoLink}}" id="videoLink" target="_blank">Video Link!!!</a></h2>{{/if}}
  </div>

  <ul id="tracks_list"></ul>

  <ul id="album_info">
    <li><h3>released {{date}}</h3></li>
    <li><h3>tags: {{#each tags}}<a href={{this.link}} target="_blank">{{this.genre}}</a> {{/each}}</h3></li>
    <li><h3><strong>&copy;</strong> All Rights Reserved</h3></li>
  </ul>
</div><!--

